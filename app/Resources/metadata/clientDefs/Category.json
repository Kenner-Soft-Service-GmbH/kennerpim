{
  "controller": "pim:controllers/record-tree",
  "iconClass": "fas fa-th",
  "boolFilterList": [
    "onlyMy",
    "notEntity",
    "notChildCategory",
    "notLinkedWithProduct",
    "linkedWithCatalog",
    "onlyRootCategory"
  ],
  "hiddenBoolFilterList": [
    "notEntity",
    "notChildCategory",
    "notLinkedWithProduct",
    "linkedWithCatalog",
    "onlyRootCategory"
  ],
  "disabledMassActions": [
    "merge"
  ],
  "views": {
    "list": "pim:views/category/list",
    "detail": "pim:views/category/detail"
  },
  "recordViews": {
    "list": "pim:views/category/record/list",
    "listTree": "pim:views/category/record/list-tree",
    "detail": "pim:views/category/record/detail"
  },
  "relationshipPanels": {
    "catalogs": {
      "selectAction": "selectRelatedEntity",
      "selectBoolFilterList": [
        "notEntity"
      ],
      "view": "pim:views/category/record/panels/catalogs"
    },
    "products": {
      "create": false,
      "select": false
    }
  },
  "menu": {
    "listTree": {
      "buttons": [
        {
          "label": "List View",
          "link": "#Category",
          "acl": "read",
          "style": "default"
        }
      ]
    },
    "list": {
      "buttons": [
        {
          "label": "Tree View",
          "link": "#Category/listTree",
          "acl": "read",
          "style": "default"
        }
      ]
    }
  },
  "dynamicLogic": {
    "fields": {
      "scope": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isTrue",
              "attribute": "hasChildren"
            }
          ]
        }
      },
      "channels": {
        "visible": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "scope",
              "value": "Channel"
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "scope",
              "value": "Channel"
            }
          ]
        },
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isTrue",
              "attribute": "hasChildren"
            }
          ]
        }
      }
    },
    "panels": {
      "catalogs": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isEmpty",
              "attribute": "categoryRouteName"
            }
          ]
        }
      },
      "products": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isFalse",
              "attribute": "hasChildren"
            }
          ]
        }
      }
    }
  }
}