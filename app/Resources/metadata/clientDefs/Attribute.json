{
  "controller": "controllers/record",
  "iconClass": "fas fa-sort-amount-down",
  "boolFilterList": [
    "onlyMy",
    "notLinkedWithProduct",
    "notLinkedProductAttributeValues",
    "notLinkedProductFamilyAttributes"
  ],
  "hiddenBoolFilterList": [
    "notLinkedWithProduct",
    "notLinkedProductAttributeValues",
    "notLinkedProductFamilyAttributes"
  ],
  "disabledMassActions": [
    "merge"
  ],
  "views": {
    "list": "pim:views/list",
    "detail": "pim:views/attribute/detail"
  },
  "recordViews": {
    "detail": "pim:views/attribute/record/detail",
    "list": "pim:views/attribute/record/list"
  },
  "dynamicLogic": {
    "fields": {
      "type": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "typeValue": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "and",
              "value": [
                {
                  "type": "isNotEmpty",
                  "attribute": "id"
                },
                {
                  "type": "equals",
                  "attribute": "type",
                  "value": "unit"
                }
              ]
            }
          ]
        },
        "visible": {
          "conditionGroup": [
            {
              "type": "or",
              "value": [
                {
                  "type": "equals",
                  "attribute": "type",
                  "value": "enum"
                },
                {
                  "type": "equals",
                  "attribute": "type",
                  "value": "multiEnum"
                },
                {
                  "type": "equals",
                  "attribute": "type",
                  "value": "enumMultiLang"
                },
                {
                  "type": "equals",
                  "attribute": "type",
                  "value": "multiEnumMultiLang"
                },
                {
                  "type": "equals",
                  "attribute": "type",
                  "value": "unit"
                }
              ]
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "or",
              "value": [
                {
                  "type": "equals",
                  "attribute": "type",
                  "value": "enum"
                },
                {
                  "type": "equals",
                  "attribute": "type",
                  "value": "multiEnum"
                },
                {
                  "type": "equals",
                  "attribute": "type",
                  "value": "enumMultiLang"
                },
                {
                  "type": "equals",
                  "attribute": "type",
                  "value": "multiEnumMultiLang"
                }
              ]
            }
          ]
        }
      }
    }
  }
}