{
    "fields": {
        "name": {
            "type": "varchar",
            "trim": true,
            "view": "pim:views/fields/image-code-name"
        },
        "alt": {
            "type": "varchar",
            "trim": true
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "image": {
            "type": "image",
            "previewSize": "small",
            "view": "pim:views/category-image/fields/image",
            "layoutMassUpdateDisabled": true
        },
        "imagesMultiple": {
            "layoutListDisabled": true,
            "layoutMassUpdateDisabled": true,
            "type": "attachmentMultiple",
            "sourceList": []
        },
        "type": {
            "type": "enum",
            "required": true,
            "options": [
                "File",
                "Files",
                "Link"
            ],
            "default": "File",
            "layoutMassUpdateDisabled": true
        },
        "imageLink": {
            "type": "url",
            "layoutListDisabled": true,
            "layoutMassUpdateDisabled": true
        },
        "size": {
            "notNull": false,
            "type": "float",
            "layoutMassUpdateDisabled": true
        },
        "width": {
            "type": "int",
            "required": false,
            "disableFormatting": false,
            "layoutMassUpdateDisabled": true
        },
        "height": {
            "type": "int",
            "required": false,
            "disableFormatting": false,
            "layoutMassUpdateDisabled": true
        },
        "imageType": {
            "type": "varchar",
            "readonly": true,
            "layoutMassUpdateDisabled": true
        },
        "categories": {
            "type": "linkMultiple",
            "layoutListDisabled": true,
            "columns": {
                "sortOrder": "sortOrder",
                "scope": "scope"
            },
            "view": "pim:views/category-image/fields/categories"
        },
        "scope": {
            "type": "enum",
            "notStorable": true,
            "options": [
                "Global",
                "Channel"
            ],
            "default": "Global",
            "view": "pim:views/category-image/fields/scope",
            "layoutListDisabled": true,
            "layoutDetailDisabled": true
        },
        "sortOrder": {
            "type": "int",
            "notStorable": true,
            "layoutDetailDisabled": true,
            "layoutListDisabled": true,
            "layoutMassUpdateDisabled": true,
            "importDisabled": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "imagesMultiple": {
            "type": "hasChildren",
            "entity": "Attachment",
            "foreign": "parent",
            "layoutRelationshipsDisabled": true,
            "relationName": "attachments"
        },
        "image": {
            "type": "belongsTo",
            "entity": "Attachment",
            "skipOrmDefs": true
        },
        "categories": {
            "type": "hasMany",
            "relationName": "categoryImageCategory",
            "foreign": "categoryImages",
            "entity": "Category",
            "additionalColumns": {
                "sortOrder": {
                    "type": "int"
                },
                "scope": {
                    "type": "varchar"
                }
            }
        }
    },
    "collection": {
        "sortBy": "name",
        "asc": true,
        "textFilterFields": [
            "name",
            "alt"
        ]
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        }
    }
}
