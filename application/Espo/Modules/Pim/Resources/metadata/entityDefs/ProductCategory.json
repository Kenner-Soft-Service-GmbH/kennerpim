{
  "fields": {
    "name": {
      "type": "varchar",
      "trim": true
    },
    "product": {
      "type": "link",
      "required": true
    },
    "category": {
      "type": "link",
      "required": true
    },
    "scope": {
      "type": "enum",
      "required": true,
      "options": [
        "Global",
        "Channel"
      ],
      "default": "Global"
    },
    "channels": {
      "type": "linkMultiple",
      "required": true,
      "importDisabled": true,
      "noLoad": false
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    }
  },
  "links": {
    "product": {
      "type": "belongsTo",
      "foreign": "productCategories",
      "entity": "Product"
    },
    "category": {
      "type": "belongsTo",
      "foreign": "productCategories",
      "entity": "Category"
    },
    "channels": {
      "type": "hasMany",
      "relationName": "productCategoryChannel",
      "foreign": "productCategories",
      "entity": "Channel"
    },
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    }
  },
  "collection": {
    "sortBy": "createdAt",
    "asc": false
  }
}