{
  "fields": {
    "name": {
      "type": "varchar",
      "trim": true,
      "required": true,
      "layoutMassUpdateDisabled": true,
      "view": "pim:views/fields/image-code-name"
    },
    "alt": {
      "type": "varchar",
      "trim": true
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "image": {
      "type": "image",
      "required": true,
      "previewSize": "small",
      "view": "pim:views/product-image/fields/image",
      "layoutMassUpdateDisabled": true
    },
    "imagesMultiple": {
      "layoutListDisabled": true,
      "layoutMassUpdateDisabled": true,
      "type": "attachmentMultiple",
      "required": true,
      "sourceList": []
    },
    "type": {
      "type": "enum",
      "required": true,
      "options": [
        "File",
        "Files",
        "Link"
      ],
      "default": "File",
      "layoutMassUpdateDisabled": true
    },
    "imageLink": {
      "type": "url",
      "layoutListDisabled": true,
      "layoutMassUpdateDisabled": true,
      "required": true
    },
    "state": {
      "type": "enum",
      "required": true,
      "options": [
        "uploaded",
        "processed"
      ],
      "optionColors": {
        "uploaded": "FFE900",
        "processed": "00FF37"
      },
      "default": "uploaded",
      "isSorted": false,
      "layoutMassUpdateDisabled": true
    },
    "size": {
      "notNull": false,
      "type": "float",
      "layoutMassUpdateDisabled": true
    },
    "width": {
      "type": "int",
      "required": false,
      "disableFormatting": false,
      "layoutMassUpdateDisabled": true
    },
    "height": {
      "type": "int",
      "required": false,
      "disableFormatting": false,
      "layoutMassUpdateDisabled": true
    },
    "imageType": {
      "type": "varchar",
      "readonly": true,
      "layoutMassUpdateDisabled": true
    },
    "products": {
      "type": "linkMultiple",
      "layoutListDisabled": true,
      "layoutDetailSmallDisabled": true,
      "columns": {
        "sortOrder": "sortOrder",
        "scope": "scope"
      },
      "view": "pim:views/product-image/fields/products"
    },
    "scope": {
      "type": "enum",
      "notStorable": true,
      "required": true,
      "layoutMassUpdateDisabled": true,
      "options": [
        "Global",
        "Channel"
      ],
      "default": "Global",
      "view": "pim:views/product-image/fields/scope",
      "layoutListDisabled": true,
      "layoutDetailDisabled": true
    },
    "sortOrder": {
      "type": "int",
      "notStorable": true,
      "layoutDetailDisabled": true,
      "layoutListDisabled": true,
      "layoutMassUpdateDisabled": true,
      "importDisabled": true
    }
  },
  "links": {
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "imagesMultiple": {
      "type": "hasChildren",
      "entity": "Attachment",
      "foreign": "parent",
      "layoutRelationshipsDisabled": true,
      "relationName": "attachments"
    },
    "image": {
      "type": "belongsTo",
      "entity": "Attachment",
      "skipOrmDefs": true
    },
    "products": {
      "type": "hasMany",
      "relationName": "productImageProduct",
      "foreign": "productImages",
      "entity": "Product",
      "additionalColumns": {
        "sortOrder": {
          "type": "int"
        },
        "scope": {
          "type": "varchar"
        }
      }
    }
  },
  "collection": {
    "sortBy": "name",
    "asc": true,
    "textFilterFields": [
      "name",
      "alt"
    ]
  },
  "indexes": {
    "name": {
      "columns": [
        "name",
        "deleted"
      ]
    }
  }
}